<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vevor.tools.seo.sem.domain.mapper.LangSiteDomainExtMapper">

    <resultMap id="BaseResultMap" type="com.vevor.tools.seo.sem.domain.dataobject.LangSiteDomainDO"
        extends="com.vevor.tools.seo.sem.domain.mapper.LangSiteDomainMapper.BaseResultMap">
    </resultMap>

    <sql id="BaseColumn">
             `id`,
            `lang`,
            `website`,
            `terminal`,
            `domain_name`,
            `domain_ip`,
            `created_by`,
            `created_time`,
            `updated_by`,
            `updated_time`,
            `is_delete`
    </sql>

    <select id="queryBySite" resultType="java.lang.Integer">
        select count(*)
        from `seo_lang_site_domain`
        where lang = #{lang} and `website` = #{website} and `is_delete` = 0
    </select>

    <select id="queryByDomain" resultType="java.lang.Integer">
        select count(*)
        from `seo_lang_site_domain`
        where `domain_name` = #{domainName} and `is_delete` = 0
    </select>

    <select id="queryByTerminal" resultType="java.lang.Integer">
        select count(*)
        from `seo_lang_site_domain`
        where
        website = #{website}
        and lang = #{lang}
        and `terminal` = #{terminal}
        and `is_delete` = 0
    </select>

</mapper>
